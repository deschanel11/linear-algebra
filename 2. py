n.T @ p

#문제 2.2.3

from sklearn.datasets import load_digits
X = load_digits().data
X

A = np.array([[1, 2, 3], [4, 5, 6]])
B = np.array([[1, 2], [3, 4], [5, 6]])
C = A @ B
C

A = np.array([[1, 2], [3, 4]])
B = np.array([[5, 6], [7, 8]])
C = np.array([[9, 8], [7, 6]])

#교환법칙
A @ B
B @ A


#분배법칙
A @ (B + C)
A @ B + A @ C

(A + B) @ C
A @ C + B @ C

#전치연산에 대한 분배법칙 확인
(A + B).T
A.T + B.T


#곱셈 연산에 대한 분배법칙 확인)
(A @ B).T
B.T @ A.T
